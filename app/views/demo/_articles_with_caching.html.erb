<section class="section-function">
  <h2 class="header-section">Articles. 1 minute caching</h2>

  <% cache("articles-1-minute-cache", expires_in: 1.minute) do %>
    <div class="section-description">
      <p>When caching is turned on this section should be rerendered only once per 1 minute.</p>
      <p>Currnetly cache is: <b><%= Rails.application.config.cache_store == :null_store ? "OFF" : "ON" %></b>.</p>
      <p>To toggle cache run in console: <b>bin/cache</b></p>
      <b>Rendered at</b> <%= DateTime.now.strftime('%d.%m.%Y %H.%M.%S') %>
    </div>

    <% articles.each do |article| %>
      <%= render partial: 'article', locals: { article: article } %>
    <% end %>
  <% end %>
</section>
